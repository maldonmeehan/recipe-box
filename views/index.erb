<h1> Welcome! </h1>

<% if @recipes.any?() %>
<h2> Here are all your recipes:</h2>
<ul>
  <% @recipes.each do |recipe| %>
  <li><a href='/recipe/<%= recipe.id() %>'><%= recipe.name() %></a>
  <% end %>
</ul>
<% else %>
<h2> You don't have any recipes yet. Let's get cookin'! </h2>
<% end %>

<form action="/recipes/new" method="post">
  <h2>Create a New Recipe:</h2>
  <div class="form-group">
    <label for="name">Recipe Title:</label>
    <input type="text" name="name">
  </div>
  <button type='submit'>Go!</button>
</form>
